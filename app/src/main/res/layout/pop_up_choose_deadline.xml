<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CalendarView
        android:id="@+id/pop_up_choose_deadline_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minDate="03/24/2020"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="196dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/pop_up_choose_deadline_validate_button"
        app:layout_constraintBottom_toBottomOf="@id/pop_up_choose_deadline_calendar"
        app:layout_constraintRight_toRightOf="@id/pop_up_choose_deadline_calendar"
        tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>